<%= form_tag send_mail_student_path(@student), :method => 'post', :id => 'contact_form' do %>
  
  <div >
    <%= label_tag "mail_subject", "Objet de votre email" %>
    <%= text_field_tag "mail[subject]", @subject, :class => "span6" %>
  </div>
  
  <div >
    <%= label_tag "mail_message", "Votre message" %>
    <%= text_area_tag "mail[message]", @message, { :rows => 8, :class => "span6"} %>
  </div>
  
  <div>
    <%= submit_tag "Envoyer l'Email", :class => "btn btn-primary" %>
  </div>
  
<% end %>
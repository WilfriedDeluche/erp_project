<%= render "shared/private_sidebar" %>

<h1>Liste des Étudiants</h1>

<table class="table table-bordered table-condensed">
  <tr>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Ville</th>
    <th>Actions</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.user.last_name.upcase unless student.user.nil? %></td>
    <td><%= student.user.first_name.capitalize unless student.user.nil? %></td>
    <td><%= student.city.capitalize %></td>
    <td>
      <%= link_to 'Show', student %>
      <%= link_to 'Edit', edit_student_path(student) %>
      <%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Student', new_student_path %>
